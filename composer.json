{
    "name": "hosmelq/pulse-schedule",
    "description": "Laravel Pulse card that list all scheduled tasks.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "hosmelq",
        "laravel",
        "pulse",
        "laravel-pulse",
        "laravel-pulse-schedule",
        "schedule"
    ],
    "authors": [
        {
            "name": "Hosmel Quintana",
            "email": "hosmelq@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.21",
        "laravel/pulse": "^1.0@beta",
        "thecodingmachine/phpstan-safe-rule": "^1.2"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "nunomaduro/larastan": "^2.6",
        "orchestra/testbench": "^8.17",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "rector/rector": "^0.17.12",
        "spaze/phpstan-disallowed-calls": "^2.16.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "HosmelQ\\Pulse\\Schedule\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "HosmelQ\\Pulse\\Schedule\\ScheduleServiceProvider"
            ]
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --configuration=phpstan.neon.dist --memory-limit=4G",
        "rector": "rector"
    }
}
